@namespace Dodoco.Launcher.Blazor

@using Ignis.Components
@using Ignis.Components.HeadlessUI

@code {

    private TabGroup? contentTabs;

    private Dictionary<string, string> tabs = new () {
        { "Events", "" },
        { "Notices", "" },
        { "Info", "" }
    };

}

<div class="h-full flex flex-col gap-y-4 justify-center">
    <div class="rounded w-[512px] overflow-hidden">
        <img src="https://dotesports.com/wp-content/uploads/2023/05/ganyu-genshin-impact.jpg?w=1200"/>
    </div>
    <div class="h-auto">
        <Panel>
            <div class="p-8 flex flex-col gap-y-4">
                <TabGroup @ref=@this.contentTabs>
                    <TabList>
                        <div class="w-full flex flex-row justify-evenly gap-x-4">
                            @foreach (var item in this.tabs) {
                                <Tab @key=item.Key AsComponent="typeof(Fragment)" Context="tab">
                                    <button class="uppercase font-bold text-defaulttext/50 [&[data-active]]:text-primary" @onclick=@(() => this.contentTabs?.SelectTab(tab)) data-active=@tab.IsSelected>
                                        @item.Key
                                    </button>
                                </Tab>
                            }
                        </div>
                    </TabList>
                    <TabPanels>
                        @foreach (var item in this.tabs) {
                            <TabPanel class="w-full h-full flex flex-col gap-y-2 text-defaulttext" @key=@item.Key Context="panel">
                                <div class="w-full inline-flex justify-between">
                                    <p>@item.Key</p>
                                    <p>10/11</p>
                                </div>
                                <div class="w-full inline-flex justify-between">
                                    <p>Example</p>
                                    <p>17/11</p>
                                </div>
                            </TabPanel>
                        }
                    </TabPanels>
                </TabGroup>
            </div>
        </Panel>
    </div>
</div>

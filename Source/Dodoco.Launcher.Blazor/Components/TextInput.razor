@namespace Dodoco.Launcher.Blazor

@code {

    [Parameter]
    public string Name { get; set; } = Guid.NewGuid().ToString();

    [Parameter]
    public string? Label { get; set; } = string.Empty;

    [Parameter]
    public string? Value { get; set; } = string.Empty;

}

<div class="flex flex-col gap-y-1">
    @if (!string.IsNullOrEmpty(this.Label)) {
        <label for=@this.Name class="text-sm text-primary">@this.Label</label>
    }
    <input type="text" name=@this.Name class="transition-colors px-4 py-2 rounded text-defaulttext bg-defaulttext/10 border-2 border-transparent focus:(border-2 border-primary) hover:(bg-defaulttext/20)" @bind=@this.Value>
</div>